{
  "compilerOptions": {
    "target": "ES2022", // Modern target for Vite
    "module": "esnext", // Required for import.meta support
    "moduleResolution": "bundler", // Recommended for Vite
    "jsx": "react-jsx", // Modern JSX transform for React
    "outDir": "./dist", // Output directory (optional for Vite, as it handles builds)
    "rootDir": "./src", // Source directory
    "strict": true, // Enable strict type checking for better safety
    "esModuleInterop": true, // For module compatibility
    "skipLibCheck": true, // Skip checking declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "allowJs": true, // Allow JavaScript files (if needed)
    "checkJs": false, // Disable type checking for JS files
    "types": ["vite/client"], // Include Vite types
    "resolveJsonModule": true // Optional: for importing JSON files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}